<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matheus.gestaog2app.cadastramento">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nome:"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/NomeLabel"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telefone"
        android:id="@+id/textView6"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CPF:"
        android:layout_marginTop="25dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Data:"
        android:layout_marginTop="25dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hora:"
        android:id="@+id/textView8"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/EmailLabel"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ServiÃ§os"
        android:id="@+id/textView10"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:ems="25"
        android:id="@+id/NomeLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Digite seu nome"
        android:maxLength="10"
        android:layout_alignLeft="@+id/EmailLabel"
        android:layout_alignStart="@+id/EmailLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/TelefoneLabel"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/NomeLabel"
        android:layout_alignStart="@+id/NomeLabel"
        android:hint="Digite seu telefone"
        android:maxLength="10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/CpfLabel"
        android:layout_above="@+id/DataLabel"
        android:layout_alignLeft="@+id/TelefoneLabel"
        android:layout_alignStart="@+id/TelefoneLabel"
        android:hint="Digite seu CPF"
        android:maxLength="11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DataLabel"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/CpfLabel"
        android:layout_alignStart="@+id/CpfLabel"
        android:hint="Digite a data"
        android:maxLength="8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/HoraLabel"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/DataLabel"
        android:layout_alignStart="@+id/DataLabel"
        android:hint="Digite a hora"
        android:maxLength="4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/EmailLabel"
        android:layout_below="@+id/HoraLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Digite seu e-mail"
        android:maxLength="20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnCadastro"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apagar"
        android:id="@+id/btnApagar"
        android:layout_alignTop="@+id/btnCadastro"
        android:layout_toRightOf="@+id/btnCadastro"
        android:layout_toEndOf="@+id/btnCadastro"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/EmailLabel"
        android:layout_alignStart="@+id/EmailLabel"
        android:layout_alignBottom="@+id/textView10" />
</RelativeLayout>
